/* ESTILOS GLOBALES DE USO DEL ESPACIO */

@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600&family=Work+Sans:wght@400;500;600&display=swap');

html, body {
  height: 100vh;
  width: 100vw;
  margin: 0;
}

.mat-drawer-transition .mat-drawer-backdrop{
  opacity: 0;
}

.mat-drawer-transition .mat-drawer-content {
  transition-duration: 1s !important;
}

.mat-drawer-shown {
  background-color: #3366CC !important;
}

.mat-drawer.mat-drawer-push {
  background-color: #3366CC;
}
.mat-drawer:not(.mat-drawer-side) {
  box-shadow: none;
}

.mat-drawer-container {
  background-color: #3366CC;
}

.govco-pwa-content {
  background-color: #FFFFFF;
  min-height: 100vh;
}

.barra-superior-general-pwa-govco, .barra-superior-interna-pwa-govco {
  display: grid;
  height: 100%;
  padding: 0 16px;
}

.barra-superior-general-pwa-govco {
  grid-template-rows: 3.5rem 3.75rem;
}

.menu-logo-pwa-govco {
  grid-row: 1;
  display: grid;
  grid-template-columns: 1fr 0.5rem 1fr 0.5rem 1fr 0.5rem 1fr 0.5rem 1fr 0.5rem 1fr;
}

.menu-hamburgesa-pwa-govco {
  grid-column: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menu-caja-pwa-govco{
  width: 1.25em;
  height: 0.906em;
  display: flex;
  flex-direction: column;
}

.menu-hamburgesa-superior,
.menu-hamburgesa-medio,
.menu-hamburgesa-inferior {
  width: inherit;
  height: 17.24137%;
  border-radius: 2px;
  background-color: #FDFDFD;
  transition: all 0.6s;
}

.menu-hamburgesa-superior,
.menu-hamburgesa-medio {
  margin-bottom: 0.219em;
}

.menu-hamburgesa-inferior {
  margin: 0;
}

.menu-hamburgesa-superior-rotacion {
  margin: 0;
  width: 8px;
  transform: rotate(45deg) translate(2.5px,0.2px);
}

.menu-hamburgesa-medio-rotacion {
  margin: 0px;
  transform: rotate(-45deg) translate(-2.6px,3px);
}

.menu-hamburgesa-inferior-rotacion {
  margin: 0px;
  width: 8px;
  transform: rotate(45deg) translate(10.7px,-3.3px);
}

.logo-pwa-govco {
  grid-column: 3 / 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

.caja-icono-pwa-govco {
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

